{
    "manifest_version": 3,
    "name": "Simple Chrome Extension",
    "version": "1.0",
    "description": "Changes a clicked word to say Boof!!!",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}